@page "/category"
@inject ICategoryRepository _categoryRepository;
@inject IJSRuntime _jsRuntime;

<BootstrapModal OnModalConfirmation="ConfirmDeleteClick" Title="Are you sure you want to delete this category?" ButtonStyle="btn-danger" ButtonText="Delete"></BootstrapModal>

@if (IsProcessing)
{
    <div class="position-absolute w-75 h-75 d-flex flex-column align-items-center bg-white justify-content-center">
        <img src="/images/loading.gif" alt="loading" />
    </div>
}
else
{
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-black bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2  class="text-white py-2">Category List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-12 text-end">
                    <a type="button" href="category/create" class="btn btn-secondary btn-lg" style="width: 250px;"><i class="bi bi-plus-square"></i>Create Category</a>
                </div>
            </div>
            @if (Categories.Any())
            {
                <p>Category List</p>
                
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var category in Categories)
                        {
                            <tr>
                                <td>
                                    @category.Name
                                </td>
                                <td>
                                    <a type="button" href="category/update/@category.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                                    <button class="btn btn-danger" @onclick="() => HandleDeleteAsync(category.Id)"><i class="bi bi-trash3"></i>Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
}

@code {
    private bool IsProcessing { get; set; } = true;
    private IEnumerable<Category> Categories { get; set; } = new List<Category>();
    private int DeleteCategoryId { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadCategoriesAsync();

            IsProcessing = false;
            StateHasChanged();
        }
    }

    private async Task LoadCategoriesAsync()
    {
        Categories = await _categoryRepository.GetAllAsync();
    }

    private async Task HandleDeleteAsync(int id)
    {
        DeleteCategoryId = id;
        await _jsRuntime.InvokeVoidAsync("ShowConfirmationModal");
    }

    private async Task ConfirmDeleteClick(bool isConfirmed)
    {
        IsProcessing = true;

        if(isConfirmed && DeleteCategoryId > 0)
        {
            var result = await _categoryRepository.DeleteAsync(DeleteCategoryId);

            if(result == true)
            {
                await _jsRuntime.ToastrSuccess("Category Delete Successful");
            }
            else
            {
                await _jsRuntime.ToastrError("Category Delete Failed");
            }

            await LoadCategoriesAsync();
        }

        await _jsRuntime.InvokeVoidAsync("HideConfirmationModal");
        DeleteCategoryId = 0;
        IsProcessing = false;
    }
}
